<div class="wrap">
    {% include 'admin/pages/common/page-title.html.twig' %}

    {{ form_start(form) }}

    {{ form_errors(form) }}

    <div>
        <table class="form-table setka-workflow-form-table">
            <tbody>
            <tr>
                <th scope="row">
                    {{ form_label(form.token) }}
                </th>
                <td>
                    {{ form_widget(form.token) }}
                    <p class="description">{{ translations.licenseKeyCaption|raw }}</p>
                    {% if not form.token.vars.valid %}
                        <div class="setka-workflow-form-errors">
                            {{ form_errors(form.token) }}
                        </div>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th scope="row">
                </th>
                <td>
                    <p>{{ translations.licenseKeyFeatures }}</p>
                    <ul class="ul-disc">
                        {% for featureItem in translations.licenseKeyFeaturesList %}
                            <li>{{ featureItem }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th scope="row">
                    {{ form_label(form.submitToken) }}
                </th>
                <td>
                    {{ form_widget(form.submitToken) }}
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    {{ form_end(form) }}
</div>